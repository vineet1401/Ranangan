<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Ranangan</title>
        <!-- Template Stylesheet -->
        <link href="/css/scheduleStyle.css" rel="stylesheet">
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
